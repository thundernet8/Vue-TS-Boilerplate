{
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es2015", "es7"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "baseUrl": "./src",
    "paths": {
      "@": ["./src"]
    },
    "allowJs": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts?"]
}
